        <list name="registers">
            <item> r0 </item>
            <item> r1 </item>
            <item> r2 </item>
            <item> r3 </item>
            <item> r4 </item>
            <item> r5 </item>
            <item> r6 </item>
            <item> r7 </item>
            <item> r8 </item>
